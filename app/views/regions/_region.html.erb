<% show_weather = local_assigns.fetch :show_weather, false %>

<article class="region">
  <h2 class="region_name">
    <%= region.name %>
    <!--<i class="fa fa-arrow-circle-right" aria-hidden="true"></i>-->
    <span class="region_listing-count">
      <%= link_to(listings_path(params: { country_code: region.country_code, region_name: region.name })) do %>
        <%= region.listings.count %>
        <i class="fa fa-home" aria-hidden="true"></i>
      <% end %>
    </span>
  </h2>

  <h3 class="region_country-name"><%= region.country.name %> <%= region.country.emoji_flag %></h3>

  <% if show_weather and region.weather.present? %>
    <%= render partial: 'regions/weather', locals: { weather: region.weather } %>
  <% end %>
</article>