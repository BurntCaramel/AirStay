<header>
  <h1>
    Hey, Iâ€™m <%= @profile.full_name %>!
  </h1>
</header>

<% if @profile.user == current_user %>
  <nav>
    <%= link_to 'Edit', edit_profile_path(@profile) %>
  </nav>
<% end %>

<p>
  <strong>My Trips:</strong>
  <%= @profile.user.trips.count %>
</p>

<aside>
  <h2>Listings</h2>
  <div class="listings">
    <%= render @profile.user.listings %>
  </div>
</aside>

<section>
  <h2>
    Reviews from guests
    <%= render partial: 'reviews/rating', locals: { rating: @profile.user.reviews_from_guests.average(:rating) } %>
  </h2>
  <%= render @profile.user.reviews_from_guests %>
</section>

<section>
  <h2>
    Reviews from hosts
    <%= render partial: 'reviews/rating', locals: { rating: @profile.user.reviews_from_hosts.average(:rating) } %>
  </h2>
  <%= render @profile.user.reviews_from_hosts %>
</section>
