<header>
  <% if @profile %>
      <h1>Welcome <%= @profile.first_name %></h1>
      <nav>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
      </nav>
  <% else %>
      <h1>Welcome to AirStay</h1>
      <nav>
        <%= link_to 'Sign In', new_user_session_path %>
        <%= link_to 'Sign Up', new_user_registration_path %>
      </nav>
  <% end %>
</header>

<nav>
  <h2>
    <%= link_to explore_path do %>
      <i class="fa fa-compass fa-spin" aria-hidden="true"></i> Explore
    <% end %>
  </h2>
  <% if user_signed_in? %>
    <h3>
      <%= link_to new_listing_path do %>
        <i class="fa fa-star" aria-hidden="true"></i> Become a Host
      <% end %>
    </h3>
  <% end %>
</nav>