<article>
  <p>
    <strong>Host:</strong>
    <% host = @listing.host %>
    <% if host.profile.present? %>
        <%= link_to(listings_path(params: { host: host })) do %>
          <%= render host.profile, locals: { small: true } %>
        <% end %>
    <% end %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @listing.address %>
  </p>

  <p>
    <strong>Lat:</strong>
    <%= @listing.lat %>
  </p>

  <p>
    <strong>Lng:</strong>
    <%= @listing.lng %>
  </p>

  <div>
    <%= render partial: 'map_embed', locals: { lat: @listing.lat, lng: @listing.lng } %>
  </div>

  <nav>
    <%= link_to 'Edit', edit_listing_path(@listing) %> |
    <%= link_to 'Back', listings_path %>
  </nav>
</article>